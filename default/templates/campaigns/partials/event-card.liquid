{% assign event = Model %}
{% if event %}
  <table role="presentation" width="100%" border="0" cellspacing="0" cellpadding="0">
    {% if event.Image %}
      <tr><td style="padding-bottom: 10px;"><img class="mobile-img-full" src="{{ event.Image }}" alt="{{ event.Title }}" width="250" style="width: 100%; height: auto; display: block;" /></td></tr>
    {% endif %}
    {% if event.Title %}
      <tr><td style="padding-bottom: 10px;"><h2 style="margin: 0; font-family: {{ Email.Styles.FontFamily }}; font-size: 24px; font-weight: bold; line-height: 1.3; color: {{ Email.Styles.TextColor }};">{{ event.Title }}</h2></td></tr>
    {% endif %}
    {% if event.Description %}
      <tr><td style="padding-bottom: 10px;"><p style="margin: 0; font-family: {{ Email.Styles.FontFamily }}; font-size: 16px; line-height: 1.5; color: {{ Email.Styles.TextColor }};">{{ event.Description }}</p></td></tr>
    {% endif %}
    {% if event.CtaText and event.CtaLink %}
      <tr><td align="left">
        <table role="presentation" width="100%" border="0" cellspacing="0" cellpadding="0">
          <tr>
            <td align="center" style="background-color: {{ event.CtaBackgroundColor }}; padding: 15px 20px;">
              <a href="{{ event.CtaLink }}" style="font-family: {{ Email.Styles.FontFamily }}; font-size: 14px; font-weight: bold; line-height: 1.3; color: {{ event.CtaTextColor }}; text-decoration: none; text-transform: uppercase; letter-spacing: 0.56px; display: block;">{{ event.CtaText }}</a>
            </td>
          </tr>
        </table>
      </td></tr>
    {% endif %}
  </table>
{% endif %}